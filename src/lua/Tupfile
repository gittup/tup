srcs += loadlib.c
srcs += linit.c
srcs += lutf8lib.c

CFLAGS += -DLUA_COMPAT_BITLIB
CFLAGS += -w

: foreach $(srcs) |> !cc -DLUA_USE_POSIX |> {objs}
: foreach $(srcs) |> !mingwcc |> {mingwobjs}

: {objs} |> !ar |> liblua.a
: {mingwobjs} |> !mingwar |> liblua-mingw.a

: foreach lua.c |> !cc |>

LDFLAGS += -lm
: lua.o liblua.a |> !ld |> lua
