srcs += ldo.c
srcs += ldump.c
srcs += lfunc.c
srcs += lgc.c
srcs += llex.c
srcs += lmem.c
srcs += lobject.c
srcs += lopcodes.c
srcs += lparser.c
srcs += lstate.c
srcs += lstring.c
srcs += ltable.c
srcs += ltm.c
srcs += lundump.c
