srcs += lutf8lib.c

CFLAGS += -w

ifneq ($(TARGET),win32)
CFLAGS += -DLUA_USE_POSIX
else
CFLAGS_lua.c += -Usig_atomic_t
endif

: foreach $(srcs) |> !cc |> {objs}

: {objs} |> !ar |> liblua.a

: foreach lua.c |> !cc |>

LDFLAGS += -lm
: lua.o liblua.a |> !ld |> lua$(PROGRAM_SUFFIX)
