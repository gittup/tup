include_rules

# Changes here need to be reflected in the build.sh file
ifeq (@(TUP_PLATFORM),linux)
	srcs += utimensat_linux.c
	srcs += dummy.c
endif

ifeq (@(TUP_PLATFORM),freebsd)
	srcs += utimensat_linux.c
	srcs += dummy.c
	srcs += clearenv.c
endif

ifeq (@(TUP_PLATFORM),macosx)
srcs += clearenv.c
srcs += dir_mutex.c
srcs += open_notify.c
srcs += macosx_open.c

srcs += faccessat.c
srcs += fchmodat.c
srcs += fchownat.c
srcs += fdopendir.c
srcs += fstatat.c
srcs += mkdirat.c
srcs += openat.c
srcs += readlinkat.c
srcs += renameat.c
srcs += symlinkat.c
srcs += unlinkat.c
srcs += utimensat.c

endif

ifeq (@(TUP_PLATFORM),solaris)
srcs += dir_mutex.c
srcs += mkdirat.c
srcs += readlinkat.c
endif
: foreach $(srcs) |> !cc |>

mingwsrcs += dir_mutex.c
mingwsrcs += fstatat.c
mingwsrcs += mkdirat.c
mingwsrcs += openat.c
mingwsrcs += renameat.c
mingwsrcs += unlinkat.c
mingwsrcs += open_notify.c
: foreach $(mingwsrcs) |> !mingwcc |>
