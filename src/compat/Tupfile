endif

ifeq ($(TARGET),solaris)
srcs += dir_mutex.c
srcs += mkdirat.c
srcs += readlinkat.c
endif

ifeq ($(TARGET),win32)
srcs += dir_mutex.c
srcs += fstatat.c
