include_rules

# Changes here need to be reflected in the bootstrap.sh file
ifeq (@(TUP_PLATFORM),linux)
srcs += dummy.c
endif

ifeq (@(TUP_PLATFORM),macosx)
srcs += dummy.c
srcs += fstatat.c
srcs += mkdirat.c
srcs += openat.c
srcs += readlinkat.c
srcs += unlinkat.c
endif

ifeq (@(TUP_PLATFORM),solaris)
srcs += dir_mutex.c
srcs += mkdirat.c
srcs += readlinkat.c
endif
: foreach $(srcs) |> !cc |>

mingwsrcs += dir_mutex.c
mingwsrcs += fstatat.c
mingwsrcs += mkdirat.c
mingwsrcs += openat.c
mingwsrcs += unlinkat.c
: foreach $(mingwsrcs) |> !mingwcc |>
